doctype html
html
  head
    title INTO THE STATIC

    <!-- STYLES -->
    link(rel="stylesheet", href="/static/styles/main.css", type="text/css")

    <!-- SCRIPTS -->
    script(src="/bower_components/jquery/dist/jquery.min.js", type="text/javascript")
    script(src="/bower_components/underscore/underscore.js", type="text/javascript")
    script(src="/bower_components/Semantic-UI/build/minified/modules/video.min.js", type="text/javascript")
    script(src="/static/scripts/video.js", type="text/javascript")
    script.
      var video_id = "#{video_id}";
      var tag = "#{tag}";
    script(src="/static/scripts/analytics.js", type="text/javascript")
    script(src="/static/scripts/master.js", type="text/javascript")
    
  body

    .ui.grid
      .row#title-row
        .four.wide.column
        .eight.wide.column
          h1 Into the
          #input-box
            span#hashtag #
            input(type="text")#search

        .one.wide.column
        .two.wide.column
          if !authed
            a(href="#{external_auth_url}")#instagram Sign in with Instagram
        .one.wide.column

      .row#video-row
        .four.wide.column
        .eight.wide.column#middle
          #video_box
          img(src="/static/images/tv-blank-square.png")#tv
          #info-box
            a#next Next

        .four.wide.column

      .row#social-row
        <a href="https://twitter.com/share?url=http://intothestatic.com/channel/#{tag}&text=Found%20this%20on%20the%20##{tag}%20channel%20via%20@intothestatic" class="twitter-share-button" data-lang="en">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

      .row#footer
        .sixteen.wide.column
          h4 Into the Static shows you a real time feed of videos being posted about a topic. A project by <a target="twitter" href="http://twitter.com/marsh">@marsh</a>
